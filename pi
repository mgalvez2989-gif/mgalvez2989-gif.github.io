<script>
  const $ = (id)=>document.getElementById(id);

  // Upload foto (buscador)
  $("photoSearchBtn").onclick = ()=> $("photoFile").click();
  $("btnTryPhoto").onclick = ()=> $("photoFile").click();
  $("photoFile").addEventListener("change", (e)=>{
    const f = e.target.files?.[0];
    if(!f) return;
    alert("Foto cargada: " + f.name + "\\nDemo: aqu√≠ se enviar√≠a a IA/asesor para identificar el repuesto.");
    e.target.value = "";
  });

  // CTAs
  $("btnLogin").onclick = ()=> alert("Demo: Login");
  $("btnSignup").onclick = ()=> alert("Demo: Registro");
  $("ctaStart").onclick = ()=> alert("Demo: Registro / seleccionar veh√≠culo");
  $("ctaDemo").onclick = ()=> alert("Demo: mostrar c√≥mo funciona");
  $("chatFab").onclick = ()=> alert("Demo: abrir chat con asesor");

  // Dropdown helpers
  function closeAllDropdowns(){
    $("ddCatalog").classList.remove("show");
    $("ddMore").classList.remove("show");
  }
  document.addEventListener("click", (ev)=>{
    const inCatalog = ev.target.closest("#navCatalog") || ev.target.closest("#ddCatalog");
    const inMore = ev.target.closest("#navMore") || ev.target.closest("#ddMore");
    if(!inCatalog) $("ddCatalog").classList.remove("show");
    if(!inMore) $("ddMore").classList.remove("show");
  });

  // Cat√°logo mega
  $("navCatalog").onclick = (e)=>{
    e.preventDefault();
    $("ddCatalog").classList.toggle("show");
    $("ddMore").classList.remove("show");
  };
  document.querySelectorAll(".megaCard").forEach(c=>{
    c.onclick = ()=> alert("Demo: abrir cat√°logo -> " + c.dataset.cat);
  });

  // M√°s dropdown
  $("navMore").onclick = (e)=>{
    e.preventDefault();
    $("ddMore").classList.toggle("show");
    $("ddCatalog").classList.remove("show");
  };
  document.querySelectorAll(".ddItem").forEach(i=>{
    i.onclick = ()=> alert("Demo: ir a -> " + i.dataset.go);
  });

  // Nav links demo
  $("navOffers").onclick = (e)=>{e.preventDefault(); alert("Demo: Ofertas del d√≠a");};
  $("navAlliances").onclick = (e)=>{e.preventDefault(); alert("Demo: Alianzas");};
  $("navHow").onclick = (e)=>{e.preventDefault(); alert("Demo: C√≥mo funciona");};
  $("navBlog").onclick = (e)=>{e.preventDefault(); alert("Demo: Blog");};
</script>
